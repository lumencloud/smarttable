<mvc:View
    controllerName="smarttable.controller.SmartTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smart="sap.ui.comp.smarttable"
    xmlns:smartfilter="sap.ui.comp.smartfilterbar"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <smartfilter:SmartFilterBar
            id="smartFilterbar"
            entitySet="Products"
            persistencyKey="SmartFilter_Explored"
            enableBasicSearch="true"
        >
            <smartfilter:controlConfiguration>
                <smartfilter:ControlConfiguration
                    key="ID"
                    visibleInAdvancedArea="true"
                />
            </smartfilter:controlConfiguration>
            <smartfilter:controlConfiguration>
                <smartfilter:ControlConfiguration
                    key="Name"
                    visibleInAdvancedArea="true"
                />
            </smartfilter:controlConfiguration>
            <smartfilter:controlConfiguration>
                <smartfilter:ControlConfiguration
                    key="Description"
                    visibleInAdvancedArea="true"
                />
            </smartfilter:controlConfiguration>
            <smartfilter:controlConfiguration>
                <smartfilter:ControlConfiguration
                    key="Price"
                    visibleInAdvancedArea="true"
                />
            </smartfilter:controlConfiguration>
        </smartfilter:SmartFilterBar>
        <smart:SmartTable
            smartFilterId="smartFilterbar"
            id="smartTable"
            initiallyVisibleFields="ID,Name,Description,Price"
            entitySet="Products"
            useVariantManagement="false"
            showRowCount="true"
            useTablePersonalisation="false"
            tableType="ResponsiveTable"
            header="Product"
            showPasteButton="true"
            persistencyKey="SmartTable_Explored"
            enableAutoBinding="true"
            enableAutoColumnWidth="false"
            class="sapUiResponsiveContentPadding"
            demandPopin="true"
        >
            <smart:customToolbar>
                <OverflowToolbar>
                    <ToolbarSpacer />
                      <Button
                        type="Transparent"
                        id="btnMultiEdit"
                        text="Edit Multiple"
                        enabled="false"
                        press="onOpenMultiEdit"
                    />
                    <Button
                        text="생성"
                        type="Emphasized"
                        press="onCreateProduct"
                    />
                    <Button
                        text="삭제"
                        type="Reject"
                        press="onDelete"
                    />
                </OverflowToolbar>
            </smart:customToolbar>
            <Table
                id="table"
                growing="true"
                growingThreshold="20"
                inset="true"
            />
        </smart:SmartTable>
    </Page>
</mvc:View>
